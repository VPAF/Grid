<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grid.MainPage2">
    <ContentPage.Content>
        <Grid BackgroundColor="#127ac7 ">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <StackLayout VerticalOptions="Center">
                <Label FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Text="Welcome to Xamarin" TextColor="White"/>
                <Label FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Text="Cross-platform apps made easy" TextColor="White"/>
            </StackLayout>
            
            <Button Grid.Row="1" BackgroundColor="#1dabf0" Text="Login" TextColor="White" Clicked="BtnLogin_OnClicked" x:Name="BtnLogin"/>
            <Button Grid.Row="2" BackgroundColor="#1dabf0" Text="Register" TextColor="White" Clicked="BtnRegister_OnClicked" x:Name="BtnRegister"/>
        </Grid>
        

    </ContentPage.Content>
</ContentPage>